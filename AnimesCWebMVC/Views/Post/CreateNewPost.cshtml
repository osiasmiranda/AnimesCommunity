@model AnimesCWebMVC.Models.PostViewModel


@{
    ViewData["Title"] = "Create";
}

<div class="content-page">
    <div class="content">
        <!-- Start Content-->
        <div class="container-fluid">
            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <h4 class="page-title"></h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->
            <div class="row">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title">nova publicação</h4>

                            <div class="tab-content">
                                <div class="tab-pane show active" id="custom-styles-preview">

                                    <form asp-action="CreateNewPost" method="post" class="needs-validation" novalidate>
                                        <div class="mb-3">
                                            <label class="form-label" for="validationCustom01">Título</label>
                                            <input type="text" asp-for="Title" class="form-control" id="validationCustom01" placeholder="Título do post" required />
                                            <div class="valid-feedback">
                                                Looks good!
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="validationCustom02">Descrição</label>
                                            <textarea asp-for="Description" cols="30" type="text" rows="6" class="form-control" id="validationCustom02" placeholder="Escreva algo...." required></textarea>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="validationCustomUsername">Upload</label>
                                            <div class="input-group">
                                                <span class="input-group-text" id="inputGroupPrepend"></span>
                                                <input asp-for="PostImageUrl" type="file" class="form-control" id="validationCustomUsername" aria-describedby="inputGroupPrepend" required />
                                            </div>
                                        </div>
                                        <button class="btn btn-primary" asp-action="Index" asp-controller="Post">Retornar</button>
                                        <button class="btn btn-success" type="submit">Enviar</button>
                                    </form>
                                </div> <!-- end preview-->
                            </div> <!-- end tab-content-->
                        </div> <!-- end card-body-->
                    </div> <!-- end card-->
                </div> <!-- end col-->
            </div>
        </div>
    </div>
</div>

